@model IEnumerable<ApplicationUser>

@{
    ViewBag.Title = "List of users";
}

<h1>All Users</h1>
@if (Model.Any())
{
    <a asp-action="Register" asp-controller="Account" class="btn btn-primary mb-3" style="width:auto">
        Add new user
    </a>
    foreach (var user in Model)
    {
        <div class="card mb-3">
           <div class="card-header">
               User Id : @user.Id
           </div>
           <div class="card-body">
               <h4 class="card-title"> @user.UserName</h4>
           </div>
           <div class="card-footer">
               <form asp-action="DeleteUser" asp-controller="Administration" asp-route-id="@user.Id" method="post">
                   <a asp-action="EditUser" asp-controller="Administration"
                      asp-route-id="@user.Id" class="btn btn-primary">Edit</a>

                   <span id="confirmDeleteSpan_@user.Id" style="display:none">
                       <span> Are you sure you want to delete ?</span>
                       <button type="submit" class="btn btn-danger">Yes</button>
                       <button type="button" onclick="confirmDelete('@user.Id',false)" class="btn btn-primary">No</button>
                   </span>
                   <span id="deleteSpan_@user.Id">
                       <button type="button"  onclick="confirmDelete('@user.Id',true)" class="btn btn-danger">Delete</button>
                   </span>
               </form>
           </div>
        </div>
    }
}
else
{
    <div class="card mb-3">
        <div class="card-header">
            No users created yet
        </div>
        <div class="card-body">
            <h3>User this button to create new user</h3>
            <a asp-action="Register" asp-controller="Account" class="btn btn-primary" style="width:auto">
                Add new user
            </a>
        </div>
        <div class="card-footer">

        </div>
    </div>
}

@section Scripts {
    @*<script src="~/js/CustomScript.js"></script>*@
<script>
    function confirmDelete(uniqueId, isDeleteClicked) {

        var deleteSpan = 'deleteSpan_' + uniqueId;
        var confirmDeleteSpan = 'confirmDeleteSpan_' + uniqueId;
        console.log(deleteSpan, confirmDeleteSpan);
        if (isDeleteClicked) {

            $('#' + deleteSpan).hide();
            $('#' + confirmDeleteSpan).show();
        } else {

            $('#' + deleteSpan).show();
            $('#' + confirmDeleteSpan).hide();
        }
    } 
</script>
}
