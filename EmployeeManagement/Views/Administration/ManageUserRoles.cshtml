@model IList<UserRolesViewModel>

@{ 
    ViewBag.Title = "Manage Roles";
    var userId = ViewBag.UserId;
}

<form method="post">
    <div class="card">
        <div class="card-header">Manage User Roles</div>
        <div class="card-body">
            @for (int i = 0; i < Model.Count(); i++)
            {
                <div class="form-check m-1">
                    <input type="hidden" asp-for="@Model[i].RoleId" />
                    <input type="hidden" asp-for="@Model[i].RoleName" />
                    <input type="checkbox" asp-for="@Model[i].IsSelected" class="form-check-input" />
                    <label asp-for="@Model[i].IsSelected" class="form-check-label">
                        @Model[i].RoleName
                    </label>
                </div>
            }
            <div asp-validation-for="All" class="text-danger"></div>
        </div>
        <div class="card-footer">
            <button type="submit" class="btn btn-primary" style="width:auto">Update</button>
            <a asp-action="EditUser" asp-controller="Administration" 
               asp-route-id="@userId" class="btn btn-outline-primary">
               Cancel
            </a>
        </div>
    </div>
</form>
